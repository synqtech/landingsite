<%= form_for(@distributor) do |f| %>

  <% if @distributor.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 style="color: #3a3a3a"><%= pluralize(@distributor.errors.count, "required field") %> are incorrect or blank:</h4>

      <ul>
      <% @distributor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :company, raw("Company Name<span style=\"color:red\">*</span>") %>
    <%= f.text_field :company, :class=>"form-control", :placeholder=>"My Company" %>
  </div>
  <div class="form-group">
    <%= f.label :email, raw("Your Email<span style=\"color:red\">*</span>") %>
    <%= f.text_field :email, :class=>"form-control", :placeholder=>"myname@mysite.com" %>
  </div>
  <div class="form-group">
    <%= f.label :name, raw("Your Name<span style=\"color:red\">*</span>") %>
    <%= f.text_field :name, :class=>"form-control", :placeholder=>"Firstname Lastname" %>
  </div>
  <div class="form-group">
    <%= f.label :phone, raw("Daytime Phone Number<span style=\"color:red\">*</span>") %>
    <%= f.text_field :phone, :class=>"form-control", :placeholder=>"(123) 456-7890" %>
  </div>
  <div class="form-group">
    <%= f.label :address_1, raw("Address<span style=\"color:red\">*</span>") %>
    <%= f.text_field :address_1, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address_2, "Suite/Unit #" %>
    <%= f.text_field :address_2, :class=>"form-control" %>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <div class="form-group">
        <%= f.label :city, raw("City<span style=\"color:red\">*</span>") %>
        <%= f.text_field :city, :class=>"form-control" %>
      </div>      
    </div>
    <div class="col-xs-4">
      <div class="form-group">
        <%= f.label :zip, "Postal Code/Zip" %>
        <%= f.text_field :zip, :class=>"form-control" %>
      </div>  
    </div>

  </div>
  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :province, raw("Province/State<span style=\"color:red\">*</span>") %>
        <%= f.text_field :province, :class=>"form-control" %>
      </div>      
    </div>
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :country, raw("Country<span style=\"color:red\">*</span>") %>
        <%= f.text_field :country, :class=>"form-control" %>
      </div>  
    </div>

  </div>
    

  <div class="actions clearfix">
    <%= f.submit "Sign Up", :class=>"btn btn-primary btn-lg pull-right" %>

  </div>

<% end %>

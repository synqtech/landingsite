<%= form_for(@roi_survey) do |f| %>
  <% if @roi_survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@roi_survey.errors.count, "error") %> prohibited this calculation:</h2>

      <ul>
      <% @roi_survey.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <hr/>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field form-group">
    
    <div class="row">
      <div class="col-sm-8">
        
        <p class="lead">How big is your store?</p>
      </div>
      <div class="col-sm-4">
        <%= f.collection_select :store_sq_ft, RoiSurvey.square_footages, :last, :first, {}, :class=>"form-control" %>
      </div>
    </div>
    

  </div>
  <hr>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8">
        <p class="lead">Does your store sell Health &amp; Beauty Accessories (HABA)</p>
      </div>
      <div class="col-sm-4">
        <%= radio_button_tag "roi_survey[haba]", "true", nil %>&nbsp;<%= label_tag 'roi_survey_haba_true', "Yes" %>
        <%= radio_button_tag "roi_survey[haba]", "false", nil %>&nbsp;<%= label_tag 'roi_survey_haba_false', "No" %>
      </div>
    </div>
    
    
  </div>
  <hr>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8">
        <p class="lead">Does your store currently have an effective CCTV system?</p>
      </div>
      <div class="col-sm-4">        <%= radio_button_tag "roi_survey[cctv]", "true", nil %>&nbsp;<%= label_tag 'roi_survey_cctv_true', "Yes" %>
        <%= radio_button_tag "roi_survey[cctv]", "false", nil %>&nbsp;<%= label_tag 'roi_survey_cctv_false', "No" %></div>
    </div>
    
    
  </div>
  <hr>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8">
        <p class="lead">Does your store currently employ a walking service.</p>
      </div>
      <div class="col-sm-4"><%= f.collection_select :walking_svc, RoiSurvey.walking_services, :first, :first , {}, :class=>"form-control"%></div>
    </div>
    
    
  </div>
  <hr>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8">
        <p class="lead">Does your store have an existing EAS system in place?</p>
      </div>
      <div class="col-sm-4">
        <%= radio_button_tag "roi_survey[existing_eas]", "true", nil %>&nbsp;<%= label_tag 'roi_survey_existing_eas_true', "Yes" %>
        <%= radio_button_tag "roi_survey[existing_eas]", "false", nil %>&nbsp;<%= label_tag 'roi_survey_existing_eas_false', "No" %></div>
    </div>
    
    
  </div>
  <hr>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8">
        <p class="lead">Is your EAS system effective?</p>
      </div>
      <div class="col-sm-4">

        <%= radio_button_tag "roi_survey[eas_effective]", "true", nil %>&nbsp;<%= label_tag 'roi_survey_eas_effective_true', "Yes" %>
        <%= radio_button_tag "roi_survey[eas_effective]", "false", nil %>&nbsp;<%= label_tag 'roi_survey_eas_effective_false', "No" %>

      </div>
    </div>
    
    
  </div>
  <hr>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8">
      <p class="lead">How many EAS tags do you currently use per month?</p>
      </div>
      <div class="col-sm-4"><div class="input-group">
          <span class="input-group-addon" id="roi_survey_num_exits_6_feet">#</span>
          <%= f.number_field :eas_tags_per_month, :class=>"form-control" %>
        </div></div>
    </div>
    
    
  </div>
  <hr>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8">
        <p class="lead">What are your total weekly sales?</p>
      </div>
      <div class="col-sm-4"><%= f.collection_select :total_weekly_sales, RoiSurvey.weekly_sales, :last, :first, {}, :class=>"form-control" %></div>
    </div>
    
    
  </div>
  <hr>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8">
        <p class="lead">What percentage of sales is meat?</p>
      </div>
      <div class="col-sm-4"><%= f.collection_select :meat_sales_percent, RoiSurvey.percentages(10), :last, :first, {}, :class=>"form-control" %></div>
    </div>
    
    
  </div>
  <hr>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8"><p class="lead">How many POS terminals are in your store?</p></div>
      <div class="col-sm-4"><div class="input-group">
          <span class="input-group-addon" id="roi_survey_num_exits_6_feet">#</span>
          <%= f.number_field :num_pos_terminals, :class=>"form-control" %>
        </div></div>
    </div>
    
    
  </div>
  <hr>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8"><p class="lead">How many non-fire exits </p></div>
      <div class="col-sm-4">
        <div class="input-group">
          <span class="input-group-addon" id="roi_survey_num_exits">#</span>
          <%= f.number_field :num_exits, :class=>"form-control" %>
        </div>
      </div>
    </div>
    
    
  </div>
  <hr>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8">
        <p class="lead">How wide are your customer exits?</p>
      </div>

      <div class="col-sm-4">
        
          <%= f.collection_select :exit_width_ft, RoiSurvey.exit_widths, :last, :first, {}, :class=>"form-control" %>
      </div>
      
    </div>
    
    
  </div>
  <hr>
  <div class="actions text-center">
    <%= f.submit "Calculate", :class=>"btn btn-lg btn-primary", :style=>"width: 280px" %>
  </div>
  <div class="clearfix"></div>
<% end %>
